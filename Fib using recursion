//Fibonacci Series using Recursion 
#include<iostream>
using namespace std;
int fib(int n) 
{ 
   if (n <= 2) 
      return n-1; 
   return fib(n-1) + fib(n-2); 
} 
  
int main () 
{ 
  int n; 
  cout<<"Input which numbered term you want to input:";
  cin>>n;
cout<<"Result: "<<fib(n);
  return 0; 
} 
