#include<iostream>
using namespace std;
int fib(int n)  //recursion 
{
   if (n <= 2)
      return n-1;
   return fib(n-1) + fib(n-2);  //calling recursively
}

int main()
{
  int n;
  cout<<"Enter the position of term you want to search: ";
  cin>>n;
  cout<<"Resultant number: "<<fib(n);
  return 0;
}
